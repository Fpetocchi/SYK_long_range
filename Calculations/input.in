 CALC_TYPE=GW+EDMFT                            !Calculation type. Avalibale: G0W0, scGW, DMFT+statU, DMFT+dynU, EDMFT, GW+EDMFT.

 #---------------------------------------------#

 NKPT3=8,8,8                                   !Number of K-points per dimension.
 XEPS_KORDER=T                                 !Flag to use the K-point ordering of XEPS.DAT if present.

 #---------------------------------------------#

 NSPIN=2                                       !Number of spins (fixed to 2).
 NSITE=1                                       !Number of impurities in the lattice.
 EXPAND=F                                      !Flag to use a single impurity solution for all the sites of the lattice. Only indexes for site 1 readed.
 ROTATE=F                                      !Solve the impurity problem in the basis where H(R=0) is diagonal.
 AFM=F                                         !Flag to use  the AFM self-consistency by flipping the spin. Requires input with doubled unit cell.
 NORB_1=3                                      !Number of orbitals in site number 1
 NAME_1=Mo                                     !Chemical species of the site number 1
 ORBS_1=1,2,3                                  !Lattice orbital indexes of site number 1

 #---------------------------------------------#

 PARAMAGNET=1                                  !Integer flag to impose spin symmetry.
 H_SEED=0.000000                               !Seed to break spin symmetry (persistent if non zero).
 EQV_SETS=1                                    !Number of sets of locally equivalent lattice orbitals.
 EQV_NORB_1=3                                  !Number of equivalent lattice orbitals in the set number 1
 EQV_ORBS_1=1,2,3                              !Lattice orbital indexes of equivalent set number 1

 #---------------------------------------------#

 BETA=10.000000                                !Inverse temperature in 1/eV.
 MAX_WMATS=600.000000                          !Maximum value of the Matsubara frequency mesh.
 NMATS=954                                     !Number of points on the imaginary frequency axis. User cannot set this as its computed from MAX_WMATS and BETA.
 NTAU_F=1001                                   !Number of points on the imaginary time axis for Fermionic quantities. Its gonna be made odd. Optimal if >~ NMATS.
 NTAU_B=5997                                   !Number of points on the imaginary time axis for Bosonic quantities. Its gonna be made odd. Optimal if >= to 2*PI*NMATS.
 TAU_UNIF=F                                    !Flag to use a non-tau_uniform mesh on the imaginary time axis.
 NREAL=2000                                    !Number of points on the real frequency axis.
 MAX_WREAL=10.000000                           !Maximum absolute value of the real frequency mesh.
 ETA=4.000000E-02                              !Real frequency broadening.

 #---------------------------------------------#

 MU=0.000000                                   !Chemical potential.
 N_READ=2.000000                               !Target density per site lookup is switched on to this value if its >0d0. Otherwise mu will be kept fixed.
 N_QUICK=1                                     !Integer flag to switch on the quick density lookup within the solver.
 N_ERR=5.000000E-03                            !Relative error on the target density. Better if not lower than 1e-3.
 MU_STEP=0.500000                              !Initial chemical potential step in the density lookup.
 MU_ITER=100                                   !Maximum number of iterations in the density lookup.
 MU_TIME=0.500000                              !Minutes of solver runtime in the density lookup.

 #---------------------------------------------#

 U_FULL=T                                      !Flag to check for inverted Re/Im parity in SPEX Ucrpa.
 U_MODEL=F                                     !Flag to build the screening from user chosen phononic modes.
 U_SPEX=T                                      !Flag to read SPEX Ucrpa.
 K_DIAG=F                                      !Flag to screen only orbital-diagonal channels.

 #---------------------------------------------#

 VH_TYPE=Ustatic                               !Hartree term mismatch between GoWo and scGW. Available: Ubare, Ustatic, Ubare_SPEX, Ustatic_SPEX.
 DC_TYPE=GlocWloc                              !Local GW self-energy which is replaced by DMFT self-energy. Avalibale: GlocWloc, Sloc.
 SMEAR_GAMMA=T                                 !Remove the interaction divergence at the Gamma point.
 ALPHA_PI=1.000000                             !Fraction of the EDMFT polarization substituted within the lattice one.
 ALPHA_SIGMA=1.000000                          !Fraction of the EDMFT self-energy substituted within the lattice one.
 ALPHA_HK=1.000000                             !Rescaling of the non-interacting Hamiltonian.
 DELTA_FIT=Moments                             !Fit to extract the local energy in GW+EDMFT calculations. Available: Analytic, Moments.
 NFIT=8                                        !Number of bath levels (Analytic) or coefficient (Moments).
 WTAIL_GIMP=0.000000                           !Frequency value above which the tail of Gimp is replaced. If =0d0 the tail is not replaced. A good number is around 100.
 WTAIL_SIMP=10.000000                          !Frequency value above which the tail of Simp is replaced. If =0d0 the tail is not replaced. A good number is around 10.

 #---------------------------------------------#

 PATH_INPUT=GWinput  !GWinput  !GWinput  !GWinput  !                                   !Folder within cwd where to look for input files.
 PATH_DATA=Results_SrMoO3  !Results_SrMoO3  !Results_SrMoO3  !Results_SrMoO3  !                                    !Folder within cwd where to store data.
 START_IT=0  !0  !0  !0  !                                     !First iteration. If its non zero the code will look for the last item in PATH_DATA/item and start there.
 LAST_IT=3  !3  !3  !3  !                                      !Last iteration.
 LOGFILE=6                                     !Standard output redirection unit. Use 6 to print to terminal. Not used yet.
 MIX_G=0.500000                                !Fraction of the old iteration curlyG.
 MIX_U=0.500000                                !Fraction of the old iteration curlyU.
 SKIP_LATT=F                                   !Skip the lattice summation and assuming good the existing Gloc and Wloc.
 PRINT_SFULL=F                                 !Print the full k-dependent self-energy (binfmt) at each iteration.

 #---------------------------------------------#

 NORDER=9                                      !Maximum perturbation order measured.
 NMEAS=1000                                    !Sweeps where expensive measurments are not performed.
 NTHERM=100                                    !Thermalization cycles. Each cycle performs NMEAS sweeps.
 NSHIFT=1                                      !Attempted shift moves at each sweep.
 PRINT_TIME=10                                 !Minutes that have to pass before observables are updated and stored.
 BINLENGTH=4                                   !If >0 the Green's function at itau will be the average within +/-binlength.
 BINSTART=40                                   !Tau points skipped at the beginning and end of the Green's function.
 RETARDED=1                                    !Integer flag to include the frequency dependent part of the interaction. User cannot set this as its deduced from CALC_TYPE.
 NNT_MEAS=1                                    !Integer flag to switch on the measurement of the susceptibility. User cannot set this as its deduced from CALC_TYPE.
 TIME_1=20                                     !Minutes of solver runtime for site number 1
