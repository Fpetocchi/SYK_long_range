# Global Vars
mu=         1.0            // Chemical potential.
beta=       10             // Inverse temperature.
Nspin=      2              // Number of spins.
Ntau=       1000           // Number of tau segments (tau points are Ntau+1).
Norder=     9              // Maximum perturbation order measured.
Nmeas=      1000           // Number of sweeps where the histograms and susceptibility calculation are avoided.
Ntherm=     1000           // Ntherm*Nmeas is the Number of thermalization sweeeps.
Nshift=     5              // Number of times the shift of a segment is proposed at each sweep.
printTime=  2              // Each PrintTime minutes observables will be printed.
paramagnet= true           // Flag to enforce spin up/dn symmetry.
retarded=   false          // Flag to include retardation in the interaction. Requires "K.DAT" file (with independent tau mesh).
nnt_meas=   false          // Flag to switch on the measurement of the susceptibility.
verbosity=  1              // Verbosity flag.
test_mpi=   false          // Test the MPI implementatation.

# Post-processing of the Green's function
binlength=  0              // If >0 the Green's function at itau will be the average within =/-binlength.
binstart=   100            // tau points skipped at the beginning and end of the Green's function.

# Density lookup algorithm (dichotomy)
density=    0.0            // if >0.0 the density lookup algorithm will find the corresponding chemical potential.
muStep=     0.2            // Initial Delta_mu step.
muIter=     50             // Maximum number of iteration.
muTime=     0.5            // Minutes of solver runtime.
muErr=      0.002          // Error in the target density.

# Site Dependent Vars
Nsite=      1              // Number of impurities to solve.
#
Name1=      Ta             // Chemical species of the 1st site (*only* 2 char).
Norb1=      1              // Orbitals within the 1st site defined by Name1.
Time1=      10             // Minutes of solver runtime for the 1st impurity. Independent from Ntherm.
