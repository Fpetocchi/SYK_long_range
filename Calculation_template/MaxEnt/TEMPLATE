################################################################################
#                                USER SETTINGS                                 #
################################################################################
#COMPULSORY
GENMAT=/home/petocchif/1_GW_EDMFT/nobackup/1_production
MATERIAL=c_Ca2RuO4




################################################################################
#                     PASTE THE FOLLOWING WITHIN PATH_DATA                     #
################################################################################

#declare -a dirindex=( "21_BKP" "22_BKP" )
#for it in "${dirindex[@]}" ;

for it in `seq 22 1 24`
do

   ## LATTICE
   cd $it/Convergence
   cp ${GENMAT}/${MATERIAL}/MaxEnt/MaxEnt.sh .
   chmod 700 MaxEnt.sh
   #
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 1 -i lat
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 2 -i lat
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 3 -i lat
   #
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f W -o 1 -i lat
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f W -o 2 -i lat
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f W -o 3 -i lat
   #
   cd ../../


   ## IMPURITY
   cd $it/Convergence
   cp ${GENMAT}/${MATERIAL}/MaxEnt/MaxEnt.sh .
   chmod 700 MaxEnt.sh
   #
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 1 -i qmc_Ru
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 2 -i qmc_Ru
   ./MaxEnt.sh -e 0.0002 -w 10000 -W 150 -f G -o 3 -i qmc_Ru
   #
   ./MaxEnt.sh -e 0.01  -w 8000  -W 50 -f C -o 1 -i imp
   ./MaxEnt.sh -e 0.01  -w 8000  -W 50 -f C -o 2 -i imp
   ./MaxEnt.sh -e 0.01  -w 8000  -W 50 -f C -o 3 -i imp
   #
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f curlyU -o 1 -i imp
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f curlyU -o 2 -i imp
   ./MaxEnt.sh -e 0.001  -w 8000  -W 100 -f curlyU -o 3 -i imp

   cd ../../

done




################################################################################
#                                  PLOT DATA                                   #
################################################################################
set grid ; set xtics 0.5
Loc='23'

set xrange [-3:3]
p for [i=1:3] Loc.'/Convergence/MaxEnt_Glat_o'.i.'_s1/Glat_t_o'.i.'_s1.DAT_dos.dat' u 1:2 w l lw 3 t ' orb-'.i

set xrange [0:10]
p for [i=1:3] Loc.'/Convergence/MaxEnt_Wlat_o'.i.i.'/Wlat_w_'.i.i.i.i.'.DAT_dos.dat' u 1:2 w l lw 3 t ' orb-'.i

set xrange [-3:3]
p for [i=1:3] Loc.'/Convergence/MaxEnt_Gqmc_Ru_o'.i.'_s1/Gqmc_Ru_t_o'.i.'_s1.DAT_dos.dat' u 1:2 w l lw 3 t ' orb-'.i

set xrange [0:10]
p for [i=1:3] Loc.'/Convergence/MaxEnt_curlyUimp_o'.i.i.'/curlyUimp_w_'.i.i.i.i.'.DAT_dos.dat' u 1:2 w l lw 3 t ' orb-'.i

set xrange [0:10]
p for [i=1:3] Loc.'/Convergence/MaxEnt_Cimp_o'.i.i.'/Cimp_w_'.i.i.i.i.'.DAT_dos.dat' u 1:(-$2/$1) w l lw 3 t ' orb-'.i




################################################################################
#                   PASTE THE FOLLOWING WITHIN it/K_resolved                   #
################################################################################
GENMAT=/home/petocchif/1_GW_EDMFT/nobackup/1_production
MATERIAL=c_Ca2RuO4

cp ${GENMAT}/${MATERIAL}/MaxEnt/MaxEnt_Kresolved.sh .
chmod 700 MaxEnt_Kresolved.sh

#SELF_ENERGY
./MaxEnt_Kresolved.sh -e 0.005  -w 18000 -W 600 -F S -N 420 -B 105 -m path  # VERSION-1 - USED
./MaxEnt_Kresolved.sh -e 0.02   -w 18000 -W 600 -F S -N 420 -B 105 -m path  # VERSION-2 - not working
./MaxEnt_Kresolved.sh -e 0.01   -w 18000 -W 600 -F S -N 420 -B 105 -m path  # VERSION-3 - wrong xy position

./MaxEnt_Kresolved.sh -e 0.005  -w 18000 -W 600 -F S -N 245 -B  49 -m full  # VERSION-1 - running

#GF
./MaxEnt_Kresolved.sh -e 0.002  -w  8000 -W 200 -F G -N 420 -B 105 -m path  # VERSION-1 - USED
./MaxEnt_Kresolved.sh -e 0.0005 -w 10000 -W 300 -F G -N 420 -B 105 -m path  # VERSION-2 - to finish










./MaxEnt_Kresolved.sh -e 0.0005 -w  8000 -W 200 -F G -N 420 -B 105 -i 120 -f 120  # VERSION-2 OK BUT NOT ENOUGH
./MaxEnt_Kresolved.sh -e 0.0001 -w  8000 -W 200 -F G -N 420 -B 105 -i 120 -f 120  # VERSION-3 DOES NOT WORK
./MaxEnt_Kresolved.sh -e 0.0002 -w  8000 -W 200 -F G -N 420 -B 105 -i 120 -f 120  # VERSION-4 DOES NOT WORK
./MaxEnt_Kresolved.sh -e 0.0002 -w  4000 -W 100 -F G -N 420 -B 105 -i 120 -f 120  # VERSION-5
